<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="315"

                android:centerColor="@color/gradient_btn_center" android:endColor="@color/gradient_btn_end" android:startColor="@color/gradient_btn_start" android:type="linear" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/seed_phrase_button_disabled_background_color" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
