<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_balance_vw_decimal_digit_container"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/home_balance_digit_decimal_height"
    android:clipChildren="false"
    android:orientation="vertical">

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/home_balance_txt_decimal_digit_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_balance_digit_decimal_height"
        android:gravity="center"
        android:text="@string/digit_5"
        android:textColor="@color/white"
        android:textSize="@dimen/home_balance_digit_decimal_text_size"
        app:customFont="AVENIR_LT_STD_BLACK" />

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/home_balance_txt_decimal_digit_bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_balance_digit_decimal_height"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/digit_6"
        android:textColor="@color/white"
        android:textSize="@dimen/home_balance_digit_decimal_text_size"
        app:customFont="AVENIR_LT_STD_BLACK" />
</LinearLayout>