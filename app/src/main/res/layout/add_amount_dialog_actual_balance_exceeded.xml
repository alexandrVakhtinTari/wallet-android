<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bottom_dialog_margin"
    android:background="@drawable/bottom_dialog_bg"
    android:orientation="vertical"
    android:paddingStart="@dimen/bottom_dialog_horizontal_padding"
    android:paddingEnd="@dimen/bottom_dialog_horizontal_padding">

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lineSpacingExtra="7dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/error_balance_exceeded_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:customFont="AVENIR_LT_STD_LIGHT" />

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/error_balance_exceeded_description"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        app:customFont="AVENIR_LT_STD_MEDIUM" />

    <com.tari.android.wallet.ui.component.CustomFontButton
        android:id="@+id/add_amount_dialog_btn_close"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="22dp"
        android:background="@color/transparent"
        android:elevation="0dp"
        android:gravity="center"
        android:text="@string/common_close"
        android:textAllCaps="false"
        android:textColor="@color/dialog_cancel_action"
        android:textSize="13sp"
        app:customFont="AVENIR_LT_STD_HEAVY" />

</LinearLayout>