<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/balance_decimal_digit_container_view"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/home_balance_digit_decimal_height"
    android:clipChildren="false"
    android:orientation="vertical">

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/balance_top_decimal_digit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_balance_digit_decimal_height"
        android:gravity="center"
        android:text="@string/digit_5"
        android:textColor="@color/white"
        android:textSize="@dimen/home_balance_digit_decimal_text_size"
        app:customFont="@string/font_black" />

    <com.tari.android.wallet.ui.component.CustomFontTextView
        android:id="@+id/balance_bottom_decimal_digit_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_balance_digit_decimal_height"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/digit_6"
        android:textColor="@color/white"
        android:textSize="@dimen/home_balance_digit_decimal_text_size"
        app:customFont="@string/font_black" />
</LinearLayout>
